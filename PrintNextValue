package practise;

import java.util.Scanner;

public class PrintNextValue {

	public static void main(String[] args) {
		PrintNextValue.printNext();

	}
	public static void printNext(){
		Scanner scanner = new Scanner(System.in);
		String input = scanner.nextLine();
		scanner.close();
//		String input = "Gautham";
		String output = "";
		char inAsiic;
		int temp;
		int temp2;
		int len = input.length();
		System.out.println(len);
		char[] inChr = input.toCharArray();
		for(int i=0; i<=len-1;i++){
			temp = (int) inChr[i];
			temp2=temp+1;
			inAsiic = (char) temp2;
			output = output+inAsiic;
			
		}
		System.out.println("The Next Characters of the given stirng is "+output);
	}
	

}
